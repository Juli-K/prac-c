#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int n, max_=-32768, min_=32768, a;
    scanf("%d", &n);
    for (int i=0; i < n; i++)
    {
        scanf ("%d", &a);
        if ( a >= max_)
            max_ = a;
        if ( a <= min_)
            min_ = a;
    }
    printf ("%d", max_-min_);
    return 0;
}
